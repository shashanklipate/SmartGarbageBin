<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"

    tools:context="com.example.nitesh.smartgarbagetracksystem.Loginas">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textStyle="bold|italic"
            android:textSize="25dp"
            android:textColor="#ffffff"
            android:text="Login as" />

        <android.support.v7.widget.CardView
            app:cardElevation="25dp"
            app:contentPadding="10dp"

            android:layout_width="140dp"
            android:layout_height="140dp"

            android:layout_gravity="center_horizontal"
            android:id="@+id/workerId"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image_worker"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/worker" />


                <TextView
                    android:id="@+id/text_worker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_worker"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="Worker"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView

            android:layout_width="140dp"
            android:layout_height="140dp"
            app:cardElevation="25dp"
            app:contentPadding="10dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/userId"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/workerId"
            android:layout_alignStart="@+id/workerId"
            android:layout_marginBottom="133dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/image_newperson"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/user" />


                <TextView
                    android:id="@+id/text_newperson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_newperson"
                    android:layout_centerHorizontal="true"
                    android:linksClickable="true"
                    android:text="New Person"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>

